}
.monobangView{
  width: 100%;
  height: 100%;
  padding: 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:column;
  align-items: center; 
}
.phonenumber{
  width: 628rpx;
  height: 74rpx;
  border: 1rpx solid #979797;
