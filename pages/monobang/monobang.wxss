  padding-left: 20rpx;
  box-sizing: border-box;
}
.yanzhengView{
  width: 100%;
  height: 100%;
  display: flex;
  margin-top: 30rpx;
}
.yanzhenginpt{
  width: 396rpx;
  height: 74rpx;
  border: 1rpx solid #979797;
