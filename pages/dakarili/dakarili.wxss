.dakariliview{
  width: 100%;
  height: 100%;
  /* padding: 0 20rpx; */
  /* box-sizing: border-box; */
}

.toprili{
  width: 100%;
  height: 800rpx;
  /* background:  */
  border-bottom: 16rpx solid #eeeeee;
  position: relative;
}
.tiptxt{
  width: 100%;
  height: 500rpx;
  background: #DC5829;
  text-align: center;
  line-height: 50rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.calendar{
  position: absolute;
  top: 80rpx;
  left: 25rpx;
  width: 700rpx;
  min-height: 686rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(153,153,153,0.20);
  border-radius: 15rpx;
}
.calendar-header{
  font-size: large;
  color: #59518d;
  padding-top: 10rpx;
}
.calendar-board{
  font-size: 36rpx;
  color: #666666;
}
.calendar--calendar-weekday{
  font-size: 28rpx;
  color: #666666;
}
.calendar--calendar-row{
  padding: 8rpx 0;
  font-size: 36rpx;
  color: #666666;
}

.dakaxindeview{
  width: 100%;
  /* height: 100%; */
  padding-bottom:80rpx; 
}
.xindeitem{
  display: flex;
  flex-direction: row;
  min-height: 200rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}
.touxiang{
  margin-right: 20rpx;
}
.touxiangimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.maincontent{
  width: 590rpx;
  border-bottom: 1rpx solid #cccccc;
}
.nickname{
  font-size: 32rpx;
  color: #333333;
}
.timeanddate{
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  line-height: 44rpx;
}
.contenttxt{
  padding: 10rpx 0;
  font-size: 30rpx;
  line-height: 46rpx;
  color: #333333;
}
.classcontent{
  font-size: 24rpx;
  color: #4D9FE5;
  line-height: 60rpx;
}
.shareview{
  position: fixed;
  bottom: 0rpx;
  left: 20rpx;
  width: 710rpx;
  height: 100rpx;
  background: #ffffff;
}

.sharebtn{
  display: block;
  background-image: linear-gradient(-180deg, #EE9031 0%, #F95D23 100%);
  border-radius: 7.5px;
  width: 710rpx;
  height: 76rpx; 
  text-align: center;
  line-height: 76rpx;
  color: #ffffff;
  font-size: 36rpx;
}

.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}

.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.hideview{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #cccccc;
  text-align: center;
  line-height: 80rpx;
  font-size: 60rpx;
  color: #ffffff;
  position: fixed;
  bottom: 80rpx;
  left: 50%;
  margin-left: -7%;
}
.baocun{
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  background: #DC5829;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
}