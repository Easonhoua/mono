/**index.wxss**/
page {
  height: 100%;
}

.container {
  height: 80%;
  min-height: 97.6%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 15rpx 15rpx;
  background-color: #ffffff;
}

.chat-list {
  flex: 1;
  padding-bottom: 80rpx;
}

.scrool-view {
  height: 85%
}

.chat-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}

.isayinforView{
  position: relative;
  padding-right: 30rpx; 
  max-width:600rpx; 
}
.followread{
  font-size: 20rpx;
  color: #666666;
  position: absolute;
  right: 96rpx;
  bottom: -44rpx;
}
.chat-left .chineseWord {
  display: block;
  margin-left: 30rpx;
  padding: 10rpx 80rpx 10rpx 10rpx;
  background: rgba(204,204,204,0.25);
  word-break: break-all;
  border-top-left-radius: 10rpx 10rpx;
  border-top-right-radius: 20rpx 20rpx;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}



.chat-left .EnglishWord {
  display: block;
  margin-left: 30rpx;
  padding: 10rpx 80rpx 10rpx 10rpx;
  background: rgba(204,204,204,0.25);
  word-break: normal;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-bottom-right-radius: 20rpx 20rpx;
  border-bottom-left-radius: 20rpx 20rpx;
}
.graysound {
  position: absolute;
  width: 24rpx;
  height: 42rpx;
  right: 60rpx;
  bottom: 10rpx;
}
.chat-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
  position: relative;
}

.contentview{
  max-width: 600rpx;
  position: relative;
}



.rightIcon,.wrongIcon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: -70rpx;
  top: 20rpx;
  /* display: none; */
}
.righttxt,.wrongtxt{
  font-size: 20rpx;
  color: #666666;
  position: absolute;
  right: 260rpx;
  bottom: -44rpx;
}

.rightIcon{
  width: 56rpx;
  height: 40rpx;
}
  
.whitesound{
  display: block;
  width: 28rpx;
  height: 50rpx;
  position: absolute;
  right: 54rpx;
  top: 15rpx;
}

.chat-right .yinpinBtn {
  margin-right: 30rpx;
  width:128rpx;
  height: 80rpx;
  background-color: #32BBFF;
  border-top-left-radius: 35rpx 35rpx;
  border-top-right-radius:  10rpx;
  border-bottom-right-radius: 35rpx 35rpx;
  border-bottom-left-radius: 35rpx 35rpx;
  word-break: break-all;
  text-align: right;
  color:  #1F1F1F;
}

.secondNum{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #ffffff;
}
.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}

.text-video-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 60rpx;
  margin-right: 5rpx;
}

.ask-input-word {
  width: 300rpx;
  height: 200rpx;
  position:fixed;
  left:30%;
  bottom:3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333333;
  overflow: hidden;
}



.button-hover{
  background-color:#CCCCCC;
}

.pos-rel {
  position: relative;
}

.pos-abs {
  position: absolute;
}

.olami-info{
  font-size: 10px;
  align-items: right;
}

.speaker{ 
    position: fixed; 
    left: 50%;
    top: 50%;
    margin-top: -50px;
    margin-left: -50px;
    width: 30%;
    height: 20%;
} 


.tipsTitle{
  width: 98%;
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 1.4px;
  text-align: center;
  position: absolute;
  margin: 50% auto;
}


.talkimg{
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.anzhuBtn{
  font-size: 36rpx;
  color: rgba(51,51,51,1)
}
.gobackImg{
  position: fixed;
  bottom: 100rpx;
  left: 68rpx;
  width: 58rpx;
  height: 46rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}
.modal-content text{
  font-size: 28rpx;
  color: #bbb;
}


.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}


.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
}